set -Eeuo pipefail

# installation path setting
bin_path="/ihp/ihpusr/cadence/xcelium/20.09/tools.lnx86/bin"

# set xmsim command line args
xmsim_opts="-64bit -logfile simulate.log -gui"

# set fault injection parameters
fi_opts="-fault_sim_run -fault_timeout 2500ns -fault_id 1575 -fault_work fault_db"

# run simulation
$bin_path/xmsim $xmsim_opts $fi_opts xil_defaultlib.Polyphase_filter_tb -input Polyphase_filter_tb_simulate.do
