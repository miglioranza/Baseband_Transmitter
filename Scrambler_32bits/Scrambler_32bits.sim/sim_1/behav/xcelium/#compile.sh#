# installation path setting
bin_path="/ihp/ihpusr/cadence/xcelium/22.03/tools.lnx86/inca/bin"

# directory path for design sources and include directories (if any) wrt this path
origin_dir="."

# set xmvhdl command line args
xmvhdl_opts="-64bit -messages -relax -logfile xmvhdl.log -append_log -update"

# set xmvlog command line args
xmvlog_opts="-64bit -messages -logfile xmvlog.log -append_log -update"

# compile design source files
