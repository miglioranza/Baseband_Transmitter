"$origin_dir/../../../../Scrambler_32bits.srcs/sources_1/new/Scrambler_32bits.vhd" \
"$origin_dir/../../../../Scrambler_32bits.srcs/sim_1/new/Scrambler_32bits_TB.vhd" \
