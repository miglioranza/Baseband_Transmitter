# installation path setting
bin_path="/ihp/ihpusr/cadence/xcelium/22.03/tools.lnx86/bin"

# set xmsim command line args
xmsim_opts="-64bit -logfile simulate.log -gui"

# set fault injection parameters
fi_opts =" -fault_overwrite -fault_good_run -fault_type SA0 -fault_tw 200ns:250ns -input strobe"

# run simulation
$bin_path/xmsim $xmsim_opts xil_defaultlib.Scrambler_32bits_TB -input Scrambler_32bits_TB_simulate.do
